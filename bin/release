#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

cat <<EOF
---
config_vars:
  JAVA_OPTS: -Xmx300m -Xss512k -XX:CICompilerCount=2
  PLAY_OPTS: --%prod -Dprecompiled=true
addons:
  cloudinary
  newrelic
  sendgrid
EOF

if [ ! -f $BUILD_DIR/Procfile ]; then
cat <<EOF
default_process_types:
  web:    play run --http.port=\$PORT \$PLAY_OPTS
EOF
fi
